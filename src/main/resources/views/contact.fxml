<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.ContactController">
   <top>
      <MenuBar>
         <menus>
            <Menu text="Navigation">
               <items>
                  <MenuItem onAction="#handleAccueil" text="Accueil" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <VBox spacing="20.0" style="-fx-padding: 30;">
         <children>
            <Label style="-fx-font-size: 28; -fx-font-weight: bold;" text="Contact / À Propos" />
            <Separator />
            <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="À Propos" />
            <TextArea fx:id="textAreaAPropos" editable="false" prefRowCount="5" text="Bienvenue dans notre galerie d'art virtuel. Nous proposons une sélection unique d'œuvres d'art de qualité." wrapText="true" />
            <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Contact" />
            <VBox spacing="5.0">
               <children>
                  <Label text="Email: contact@galerie-art-virtuel.com" />
                  <Label text="Téléphone: +212 7 10 28 71 98" />
                  <Label text="Adresse: 123 Rue de l'Art, 75001 Casablanca" />
               </children>
            </VBox>
            <Separator />
            <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Formulaire de Contact" />
            <VBox spacing="10.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Nom:" />
                        <TextField fx:id="fieldNom" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Email:" />
                        <TextField fx:id="fieldEmail" />
                     </children>
                  </HBox>
                  <Label text="Message:" />
                  <TextArea fx:id="textAreaMessage" prefRowCount="5" wrapText="true" />
                  <Button onAction="#handleEnvoyerMessage" text="Envoyer le message" />
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
